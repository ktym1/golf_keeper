<div class='row'>
  <div class='small-12 medium-6 large-4 columns'>
    <div class="round-wrapper">
      <div class="round-content">
        <h5>Scorecard</h5>
        <p>Course: <%= @round.course.name %></p>
        <p>Round Complete? <div class="status-input"><%= best_in_place [@player, @round], :round_complete, :as => :checkbox %></div></p>
        <br>
        <p><%= link_to "Back to Profile", player_path(current_user) %></p>
      </div>
    </div>
  </div>

  <div class="small-12 medium-6 large-8 columns">
     <div class="score-summary">
      <table>
        <thead>
          <tr>
            <th width="25">Hole</th>
            <th width="25">Score</th>
            <th width="30">Tee: <%= @round.tee.colour.capitalize %></th>
            <th width="50">Handicap: <%= @round.player.gender.capitalize %></th>
            <th width="25">Par</th>  
          </tr>
        </thead>
        <tbody>
          <% @round.scores.each do |score| %> 
            <tr>
              <td><%= score.hole.hole_number %></td>
              <td class="score-input"><%= best_in_place score, :score, :path => player_round_score_path(@round.player, @round, score), :type => :input %></td>
              <td><%= score.get_yards %></td>
              <td><%= score.hole.handicap_rating %></td>
              <td><%= score.hole.par %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  