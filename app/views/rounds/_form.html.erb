<div class="form-wrapper">
	<p> Create a new round </p>	
		<%= form_for [player, round] do |f| %>
			<div class="form-label"><%= f.label :course %></div>
			<%= f.collection_select(:course_id, @courses, :id, :name, {:prompt=>true}, {:class=>"form-field"}) %>
			
			<div class="form-label"> <%= f.label :tee %><div>
			<%= f.collection_select(:tee_id, @tees, :id, :colour, {:prompt=>true}, {:class=>"form-field"}) %> 
			
			<%= f.hidden_field :round_length, :value => 18 %>
			<%= f.hidden_field :player_id, :value => player.id %>

			<%= f.submit %> 
		<% end %>
</div>

