<% button_text ||= "Save" %>

<div class="form-wrapper">
	<%= form_for(player, :html => {:multipart => true}) do |f| %>
		<%= render partial: "shared/error_messages", locals: {resource: @player} %>
		
		<div class="form-gender">
			<div class="form-label"><%= f.label :gender, "Male" %></div>
				<%= f.radio_button(:gender, "M")%>
		</div>
		<div class="form-gender">
			<div class="form-label"><%= f.label :gender, "Female" %></div>
				<%= f.radio_button(:gender, "F") %>
		</div>
			
		<div class="form-label"><%= f.label :email %></div>
			<%= f.text_field :email, :class => "form-field" %>	
			
		<div class="form-label"><%= f.label :username %></div>
			<%= f.text_field :username, :class => "form-field" %>	

		<div class="form-label"><%= f.label :handicap_index %></div>
			<%= f.number_field :handicap_index, in: 0..40.4, :step => 0.1, :class => "form-field" %>
				
		<div class="form-label"><%= f.label :avatar %></div>
			<%= f.file_field :avatar, :class => "form-field" %>	
			
		<%= f.submit button_text, :class => "form-field" %>

	<% end %>
</div>
