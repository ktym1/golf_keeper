<h4> Account Info </h4>
	<p> Username: <%= @player.username %></p>
	<p> Email: <%= @player.email %> </p>
	<p> Handicap Index: <%= @player.handicap_index %> </p>
	<p> Recent Activity: </p>
 
<table>
  <thead>
    <tr>
      <th width="50">Round</th>
      <th width="100">Course</th>
      <th width="50"># Holes</th>
      <th width="50">Score</th>
      <th width="50">Par</th>
      <th width="50">+/-</th>
      <th width="50">Date</th>
    </tr>
  </thead>
  <tbody>
    <% @player.rounds.ordered_by_last_updated_score.each_with_index do |round, index| %>
      <tr>
        <td> <%= index + 1 %> </td>
        <td> 
          <%= link_to round.course.name, player_round_path(@player, round) %> 
        </td>
        <td> <%= round.round_length %> </td>
        <td> <%= round.total %> </td>
        <td> <%= round.par %> </td>
        <td> <%= round.score_differential_sum %> </td>
        <td> <%= round.time_update %>To Do </td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
     <th width="150"> Stats Comparison </th> 
  </thead>
  <tbody>
    <tr>
      <th width="50"><%= link_to "See How You Rank", player_courses_index_path %></th>
    </tr>
 </tbody>
</table>

<h5> <%= link_to "Start a new round", new_player_round_path(@player) %> </h5>