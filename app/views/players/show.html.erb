<h4> Account Info </h4>
	<p> Username: <%= @player.username %></p>
	<p> Email: <%= @player.email %> </p>
	<p> Handicap Index: <%= @player.handicap_index %> </p>
	<p> Recent Activity: </p>

<!-- Add in player info on their rounds of golf  -->
 




<table>
  <thead>
    <tr>
      <th width="50">Round</th>
      <th width="100">Course</th>
      <th width="50"># Holes</th>
      <th width="50">Score</th>
      <th width="50">Par</th>
      <th width="50">+/-</th>
      <th width="50">Date</th>
    </tr>
  </thead>
  <tbody>
    <% @player.rounds.each do |round| %>
      <tr>
        <td> <%= round.id %> </td>
        <td> <%= round.course %> </td>
        <td> <%= round.round_length %> </td>
        <td> <%= round.total %> </td>
        <td> <%= round.par %> </td>
        <td> Score Differential: TO DO </td>
        <td> <%= round.updated_at %>To Do </td>
      </tr>
    <% end %>
  </tbody>
</table>


<h4> <%= link_to "Start a new round", new_player_round_path(@player) %> </h4>