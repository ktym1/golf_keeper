<p> <%= @course[:name] %></p> 

<%= link_to "Edit Course", edit_course_path(@course) %> | <%= link_to "Delete Course", @delete, :confirm => "Are you sure you want to delete this course?", :method => :delete %>


<h4> Course Holes </h4>

<table>
	<thead>
		<tr>
			<th width="150"> Hole </th>
				<% @course.holes.each do |hole| %>
					<th width="10"><%= hole.hole_number %> </th>
				<% end %>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td> Par </td>
			<% @course.holes.each do |hole| %>
				<td>
					<%  if hole.par %>
						<%= link_to hole.par, edit_course_hole_path(@course, hole) %>
					<% else %>
						<%= link_to "Add Hole Info", edit_course_hole_path(@course, hole)%>  
					<% end %>
				</td>
			<% end %>
		<tr>
			<td> Handicap: Men </td>
			<% @course.holes.each do |hole| %>
				<td>
					<%  if hole.handicap_rating %>
							<%= link_to hole.handicap_rating, edit_course_hole_path(@course, hole) %>
					<% end %>
				</td>
			<% end %>
		</tr>
		<tr>
			<td> Handicap: Women </td>
		</tr>
		<tr>
			<td> Tee </td>
		</tr>
	</tbody>
</table>
