<div class="row">
	<div class='small-12 medium-6 large-4 columns'>
		<div class='rankings-wrapper'>
			<div class='rankings-content'>
				<h5> Course Stats </h5>
					<p><%= link_to "Back to Profile", player_path(current_user) %></p>
			</div>
		</div>
	</div>

	<div class='small-12 medium-6 large-8 columns'>
		<div class='rankings-summary'>
			<table>
				<thead>
						<tr>
							<th width="50">         </th>
							<th width="25"> Overall </th>
							<th width="25"> Course Worst </th>
							<th width="25"> Average </th>
							<th width="25"> Your Overall </th>
							<th width="25"> Your Average </th>
							<th width="25"> Your Worst </td>
						</tr>
				</thead>
				<tbody>
					<% @course.each do |course| %>
					<tr>
							<td> <%= course.name %> </td>
							<td> <%= course.course_best_score %> </td>
							<td> <%= course.course_worst_score %> </td>
							<td> <%= course.course_average_score %> </td>	
							<td> <%= current_user.best_score_for_player(course.id) %> </td>
							<td> <%= current_user.average_score_for_player(course.id) %></td>
							<td><%= current_user.worst_score_for_player(course.id)%> </td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

